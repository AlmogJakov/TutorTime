<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#D2E1E3"
    tools:context=".ui.search.TeacherCard">

    <ScrollView
        android:id="@+id/scrollView3"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:fadeScrollbars="false"
        android:fillViewport="true"
        android:scrollbarThumbVertical="@drawable/scrollbar_vertical_thumb"
        app:layout_constraintBottom_toTopOf="@+id/RelativeLayout02"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">


        <LinearLayout
            android:id="@+id/first"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/soft_gray"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="205dp"
                android:elevation="4dp"
                android:outlineAmbientShadowColor="@color/black"
                android:outlineSpotShadowColor="@color/black"
                android:padding="0dp">

                <ImageView
                    android:id="@+id/title_background"
                    android:layout_width="fill_parent"
                    android:layout_height="52dp"
                    android:background="@color/gray"
                    android:scaleType="centerCrop" />

                <!--            android:src="@drawable/tutor_example2"-->

                <!--            android:background="@android:color/transparent"-->


                <TextView
                    android:id="@+id/name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/header"
                    android:layout_gravity="center_vertical|center_horizontal"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="51dp"
                    android:layout_toEndOf="@+id/profile_image_box"
                    android:ellipsize="end"
                    android:foregroundGravity="center_vertical|center_horizontal"
                    android:maxEms="8"
                    android:maxLines="1"
                    android:paddingTop="4dp"
                    android:text=""
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    android:textStyle="normal"
                    android:typeface="serif" />

                <androidx.cardview.widget.CardView
                    android:id="@+id/profile_image_box"
                    android:layout_width="158dp"
                    android:layout_height="152dp"

                    android:layout_alignParentStart="true"
                    android:layout_gravity="center_vertical|center_horizontal"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="10dp"
                    app:cardBackgroundColor="@color/black"
                    app:cardCornerRadius="250dp">

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_horizontal|center_vertical"
                        app:cardCornerRadius="250dp">

                        <ImageView
                            android:id="@+id/profile_image"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="center_horizontal|fill_vertical"
                            app:srcCompat="@drawable/profile" />

                        <!--                    app:srcCompat="@drawable/tutor_example1"-->

                    </androidx.cardview.widget.CardView>

                </androidx.cardview.widget.CardView>

                <LinearLayout
                    android:id="@+id/header"
                    android:layout_width="224dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="9dp"
                    android:layout_marginEnd="0dp"
                    android:orientation="horizontal">

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:gravity="center_vertical|end">

                        <TextView
                            android:id="@+id/opinion"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="8dp"

                            android:layout_toStartOf="@+id/star"
                            android:textSize="14sp" />

                        <androidx.cardview.widget.CardView
                            android:id="@+id/star"
                            android:layout_width="90dp"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:layout_marginStart="10dp"
                            android:layout_marginTop="2dp"
                            android:layout_marginEnd="10dp"
                            android:layout_marginBottom="2dp"
                            android:orientation="horizontal"
                            app:cardCornerRadius="250dp">

                            <RatingBar
                                android:id="@+id/rating"
                                style="?android:attr/ratingBarStyleSmall"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:isIndicator="true"
                                android:mirrorForRtl="false"
                                android:numStars="5"
                                android:outlineAmbientShadowColor="@color/black"
                                android:outlineSpotShadowColor="@color/black"
                                android:paddingTop="3dp"
                                android:paddingBottom="3dp"
                                android:stepSize="0.1"
                                android:theme="@style/RatingBar" />
                        </androidx.cardview.widget.CardView>
                    </RelativeLayout>
                </LinearLayout>


            </RelativeLayout>



                    <RelativeLayout
                        android:id="@+id/RelativeLayout06"
                        android:layout_width="330dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:layout_gravity="center"
                        android:background="#F5FDFD"
                        android:orientation="horizontal"
                        android:paddingStart="20dp"
                        android:paddingTop="3dp"
                        android:paddingEnd="20dp"
                        android:paddingBottom="3dp">

                        <TextView
                            android:id="@+id/a"
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:layout_alignParentStart="true"
                            android:ellipsize="end"
                            android:text="@string/priceCard"
                            />

                        <TextView
                            android:id="@+id/price"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:layout_marginEnd="0dp"
                            android:text=""
                            android:textAlignment="viewStart"
                            android:textColor="@color/black"
                            android:textSize="16sp"
                            android:textStyle="normal"
                            android:typeface="serif"
                            tools:ignore="RtlCompat" />
                    </RelativeLayout>



            <RelativeLayout
                android:id="@+id/RelativeLayout07"
                android:layout_width="330dp"
                android:layout_height="wrap_content"
                android:background="#F5FDFD"
                android:layout_gravity="center"
                android:orientation="horizontal"
                android:layout_marginTop="1dp"
                android:paddingStart="20dp"
                android:paddingTop="3dp"
                android:paddingEnd="20dp"
                android:paddingBottom="3dp">

                <TextView
                    android:id="@+id/b"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:ellipsize="end"
                    android:text="@string/learning_typeCard" />

                <TextView
                    android:id="@+id/type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="0dp"
                    android:text=""
                    android:textAlignment="viewStart"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:textStyle="normal"
                    android:typeface="serif"
                    tools:ignore="RtlCompat" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/RelativeLayout05"
                android:layout_width="330dp"
                android:layout_height="wrap_content"
                android:background="#F5FDFD"
                android:layout_gravity="center"
                android:layout_marginTop="1dp"
                android:orientation="horizontal"
                android:paddingStart="20dp"
                android:paddingTop="3dp"
                android:paddingEnd="20dp"
                android:paddingBottom="3dp">

                <TextView
                    android:id="@+id/a2"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:ellipsize="end"
                    android:text="@string/subjectCard" />

                <TextView
                    android:id="@+id/subject"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="0dp"
                    android:text=""
                    android:textAlignment="viewStart"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:textStyle="normal"
                    android:typeface="serif"
                    tools:ignore="RtlCompat" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/RelativeLayout04"
                android:layout_width="330dp"
                android:layout_height="wrap_content"
                android:background="#F5FDFD"
                android:layout_gravity="center"
                android:layout_marginTop="1dp"
                android:orientation="horizontal"
                android:paddingStart="20dp"
                android:paddingTop="3dp"
                android:paddingEnd="20dp"
                android:paddingBottom="3dp">

                <TextView
                    android:id="@+id/a1"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:ellipsize="end"
                    android:text="@string/cityCard" />

                <TextView
                    android:id="@+id/area"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="0dp"
                    android:text=""
                    android:textAlignment="viewStart"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:textStyle="normal"
                    android:typeface="serif"
                    tools:ignore="RtlCompat" />
            </RelativeLayout>

            <View
                android:id="@+id/line"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginTop="8dp"
                android:layout_marginStart="40dp"
                android:layout_marginEnd="40dp"
                android:background="#c0c0c0"
                android:orientation="horizontal"
                app:layout_constraintTop_toBottomOf="@+id/area" />


            <RelativeLayout
                android:id="@+id/RelativeLayout01"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="8dp"
                android:paddingStart="20dp"
                android:paddingTop="3dp"
                android:paddingEnd="20dp"
                android:paddingBottom="3dp">

                <TextView
                    android:id="@+id/description"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:ellipsize="end"
                    android:text="" />

                <TextView
                    android:id="@+id/e"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"                    android:layout_centerHorizontal="true"

                    android:text="" />
            </RelativeLayout>

            <androidx.cardview.widget.CardView
                android:id="@+id/rateTutor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="50dp"
                android:layout_marginEnd="32dp"
                android:layout_toEndOf="@+id/send"
                android:clickable="true"
                android:foreground="?android:attr/selectableItemBackground"
                app:cardBackgroundColor="#F4E2AD"
                app:cardCornerRadius="10dp"
                app:cardElevation="1dp"
                app:cardPreventCornerOverlap="true"
                app:cardUseCompatPadding="true"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.67"
                app:layout_constraintStart_toStartOf="parent">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center|center_vertical|top"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/rate1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:layout_marginTop="8dp"
                        android:layout_marginEnd="8dp"
                        android:text="@string/rate_the_tutor"
                        android:textAlignment="center"
                        android:textSize="14sp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.0"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintVertical_bias="0.03" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

        </LinearLayout>
    </ScrollView>

    <RelativeLayout
        android:id="@+id/RelativeLayout02"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#85CECFCF"
        android:orientation="horizontal"
        android:paddingStart="20dp"
        android:paddingTop="3dp"
        android:paddingEnd="20dp"
        android:paddingBottom="3dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0">

        <Button
            android:id="@+id/send"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_gravity="center"
            android:layout_marginStart="3dp"
            android:gravity="center"
            android:text="@string/send_message" />

        <Button
            android:id="@+id/phone"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_gravity="center"
            android:layout_marginEnd="3dp"
            android:gravity="center"
            android:text="@string/phone" />
    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>

