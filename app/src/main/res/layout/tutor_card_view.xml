<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    android:orientation="horizontal"
    android:padding="8dp">

    <androidx.cardview.widget.CardView
        android:id="@+id/tutor_card_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="20dp"
        android:orientation="vertical"
        android:background="@color/soft_gray"
        android:clickable="true"
        android:foreground="?android:attr/selectableItemBackground"
        app:cardBackgroundColor="@color/soft_gray"
        android:layout_marginTop="0dp">


        <LinearLayout
            android:id="@+id/first"
            android:orientation="vertical"
            android:layout_height="wrap_content"
            android:layout_width="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:outlineAmbientShadowColor="@color/black"
            android:outlineSpotShadowColor="@color/black"
            android:elevation="4dp"
            android:padding="0dp">

            <ImageView
                android:id="@+id/title_background"
                android:layout_width="fill_parent"
                android:layout_height="32dp"
                android:scaleType="centerCrop"
                android:background="@color/gray" />
<!--            android:src="@drawable/tutor_example2"-->

<!--            android:background="@android:color/transparent"-->


            <androidx.cardview.widget.CardView
                android:id="@+id/profile_image_box"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                app:cardCornerRadius="250dp"
                app:cardBackgroundColor="@color/black">

                <androidx.cardview.widget.CardView
                    android:layout_width="68dp"
                    android:layout_height="68dp"
                    app:cardCornerRadius="250dp"
                    android:layout_gravity="center_horizontal|center_vertical">

                    <ImageView
                        android:id="@+id/profile_image"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_horizontal|fill_vertical"
                        app:srcCompat="@drawable/profile" />

<!--                    app:srcCompat="@drawable/tutor_example1"-->

                </androidx.cardview.widget.CardView>

            </androidx.cardview.widget.CardView>

            <LinearLayout
                android:id="@+id/header"
                android:layout_width="fill_parent"
                android:layout_height="32dp"
                android:layout_toEndOf="@+id/profile_image_box"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/title_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical|center_horizontal"
                    android:layout_toEndOf="@+id/profile_image_box"
                    android:ellipsize="end"
                    android:foregroundGravity="center_vertical|center_horizontal"
                    android:maxEms="8"
                    android:maxLines="1"
                    android:paddingTop="4dp"
                    android:text=""
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:gravity="end|center_vertical">

                    <androidx.cardview.widget.CardView
                        android:layout_width="90dp"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="2dp"
                        android:layout_marginEnd="10dp"
                        android:layout_marginBottom="2dp"
                        android:orientation="horizontal"
                        app:cardCornerRadius="250dp">

                        <RatingBar
                            android:id="@+id/rating"
                            style="?android:attr/ratingBarStyleSmall"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:isIndicator="true"
                            android:mirrorForRtl="false"
                            android:numStars="5"
                            android:outlineAmbientShadowColor="@color/black"
                            android:outlineSpotShadowColor="@color/black"
                            android:paddingTop="3dp"
                            android:paddingBottom="3dp"
                            android:stepSize="0.1"
                            android:theme="@style/RatingBar" />
                    </androidx.cardview.widget.CardView>
                </RelativeLayout>
            </LinearLayout>

            <TextView
                android:id="@+id/description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/header"
                android:layout_toEndOf="@+id/profile_image_box"
                android:text=""
                android:maxLines="3"
                android:ellipsize="end"
                android:paddingEnd="20dp"
                android:paddingTop="2dp"
                android:textColor="#8b8b8b" />

        </RelativeLayout>




            <View
                android:id="@+id/line"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:orientation="horizontal"
                android:layout_marginStart="40dp"
                android:layout_marginEnd="40dp"
                android:background="#c0c0c0"/>




<!--        <RelativeLayout-->
<!--            android:id="@+id/second"-->
<!--            android:layout_width="match_parent"-->
<!--            android:layout_height="wrap_content"-->
<!--            android:orientation="horizontal"-->
<!--            android:layout_toBottomOf="@+id/first"-->
<!--            app:layout_constraintTop_toBottomOf="@+id/first">-->





            <RelativeLayout
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/RelativeLayout01"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="3dp"
                android:paddingBottom="3dp"
                android:paddingStart="20dp"
                android:paddingEnd="20dp">

                <TextView
                    android:id="@+id/subject"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:ellipsize="end"
                    android:maxEms="8"
                    android:maxLines="1"
                    android:text="" />

                <TextView
                    android:id="@+id/price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:ellipsize="end"
                    android:maxEms="8"
                    android:maxLines="1"
                    android:text="" />

            </RelativeLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>
</RelativeLayout>



